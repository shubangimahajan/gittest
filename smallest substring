str=input()
tot=len(set(str))
n=len(str)

vis={}
for k in set(str):
    vis[k]=0

c=0
j=0
ans=n
for i in range(len(str)):
    vis[str[i]]+=1
    if vis[str[i]]==1:
        c+=1
    
    if c==tot:
        while vis[str[j]]>1:
            #if vis[str[j]]>1:
            vis[str[j]]-=1
            j+=1
        win=i-j+1
        
        if ans>win:
            ans=win
print(ans)
    
